<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Simple Login Demo</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 40px; }
    .box { width: 320px; margin: 0 auto; border: 1px solid #ddd; padding: 20px; border-radius: 8px; background:#fff; }
    input { width:100%; padding:8px; margin:8px 0; box-sizing:border-box; }
    button { width:100%; padding:10px; }
    #result { margin-top:12px; color:#111; background:#f7f7f7; padding:8px; border-radius:6px; word-wrap:break-word; }
  </style>
</head>
<body>
  <div class="box">
    <h3>Login</h3>
    <form id="loginForm" autocomplete="off">
      <input id="username" name="username" type="text" placeholder="Username" required />
      <input id="password" name="password" type="password" placeholder="Password" required />
      <button type="submit">Login</button>
    </form>

    <!-- where we show the captured values -->
    <div id="result" aria-live="polite"></div>
  </div>

  <script>
    // ensure DOM is ready
    document.addEventListener('DOMContentLoaded', function () {
      const form = document.getElementById('loginForm');
      const out = document.getElementById('result');

      form.addEventListener('submit', function (ev) {
        ev.preventDefault(); // IMPORTANT: stop the form from reloading the page

        // grab values
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;

        // show in result area (demo only) and log to console
        out.textContent = 'Captured (demo only) â€” Username: ' + username + '  |  Password: ' + password;
        console.log('Captured username:', username);
        console.log('Captured password:', password);

        // In real apps: send securely to a backend, do not store plain passwords
      });
    });
  </script>
</body>
</html>
